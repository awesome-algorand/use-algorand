{
  "compilerOptions": {
    "strict": true,
    "ignoreDeprecations": "5.0",
    "allowJs": true,
    "isolatedModules": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node"
  },
  "exclude": [
    "lib/**/*.spec.js",
    "lib/cjs/**/*"
  ],
  "include": [
    "lib/**/*.js"
  ],
  "typedocOptions": {
    "entryPoints": [
      "lib/common.js",
      "lib/use-algod.js",
      "lib/use-indexer.js"
    ],
    "out": "./docs"
  }
}
